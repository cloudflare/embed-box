@css {
  @font-face {
    font-family: "universal-embed-icons";
    font-style: normal;
    font-weight: normal;
    src: url(data:application/x-font-woff;charset=utf-8;base64,) format("woff");
  }
}

chevronIconForMoreLinksAndButtons()
  font-family "universal-embed-icons"
  position relative
  display inline-block
  vertical-align baseline
  color inherit
  font-style normal
  font-weight inherit
  font-size 1em
  line-height 1
  text-decoration none

a.more, button.more, .with-more-icon-after

  &:after
    chevronIconForMoreLinksAndButtons()
    content "\203A" // ›
    padding-left .3em

a.before, .with-before-icon-before

  &:before
    chevronIconForMoreLinksAndButtons()
    content "\2039" // ‹
    padding-right .3em
